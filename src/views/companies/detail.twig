{# extend the parent tpl #}
{% extends 'layout.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'My Blog &raquo; Blogposts &raquo; Detail' %}

{% block pageContent %}
	<p class="breadcrumb"><a href="{{ app.request.baseUrl }}/">Praxis</a> &raquo; <a href="{{ app.request.baseUrl }}/companies">Companies</a> &raquo; {{ companie.Name }}</p>
        
        <section class="stage">
                <article>
                    <h1>{{companie.Name}}</h1>

                    <h2>Facilities</h2>

                        {% if facilities %}
                            {%for facility in facilities%}
                    <article id="soortenStages">
                        <p>{{facility.Name}}</p>
                        <p>{{facility.Street}}</p>
                        <h3>Stages</h3>
                    </article>
                        {%endfor%}
                        {%else%}
                    <p>No facilities found</p>
                        {%endif%}
                </article>
	</section>
	
{% endblock %}